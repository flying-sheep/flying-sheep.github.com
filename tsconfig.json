{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ES2017",
		"lib": ["ES2017", "DOM", "DOM.Iterable"],
		"jsx": "react",
		//stronger types
		"noImplicitAny": true,
		"strictNullChecks": true,
		"preserveConstEnums": true,
        "alwaysStrict": true,
		//rollup enforced
		"noEmitHelpers": true,
		"importHelpers": true,
		"noResolve": false,
		//more
		"removeComments": true,
		"sourceMap": true
	},
	"include": [
		"src/**/*"
	]
}
